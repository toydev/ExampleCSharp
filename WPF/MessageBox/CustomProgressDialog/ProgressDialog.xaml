<Window x:Class="CustomProgressDialog.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProgressDialog" Width="300" Height="150" Loaded="Window_Loaded" Topmost="True" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <ProgressBar DockPanel.Dock="Bottom" Name="progressBar" Height="25" />
        <TextBlock DockPanel.Dock="Top" Name="messageLabel" VerticalAlignment="Center" TextWrapping="Wrap">メッセージ</TextBlock>
    </DockPanel>
</Window>
